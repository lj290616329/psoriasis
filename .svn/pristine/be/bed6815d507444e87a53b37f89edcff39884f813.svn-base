<view class="container">
<view class="avatar">
  <view class="real">
    <image class="a" src="{{userInfoAvatar}}" bindtap="chooseimage"/>
  </view>
  <view class='txt'>
      <text class='p1'>{{list.wxUser.name}}</text>
      <text class='p2'>主治医生</text>
      <text class='p3'>长庚医院内科科长</text>
      <text class='p4'>擅长领域：银屑病</text>
  </view>
</view>
<view class="nickName">
  <text>昵称:</text>
  <view class="real">{{nickName}}</view>
</view>
<view class="sex">
  <text>性别:</text>
  <view class="real">
   <radio-group class="radio-group" bindchange="radioChange">
     <label class="radio" wx:for="{{items}}">
       <radio value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
     </label>
   </radio-group>
  </view>
</view>
<view class="area">
  <text>地址:</text>
  <view class="real">{{province}}省{{city}}市</view>
</view>
<view class="signature">
  <text>名医简介:</text>
  <view class="real"></view>
</view>
</view>