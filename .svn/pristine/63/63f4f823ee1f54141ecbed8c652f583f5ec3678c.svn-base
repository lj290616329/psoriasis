var app = getApp()
var domain = app.globalData.host;
Page({  
  data:{
    arrayeducation: ['文盲', '小学','初中','高中','大学','研究生以上'],
    show: false,
    warnmsg:'', 
    /*需要提交的数据*/
    id:'',
    name: '',
    wx: '',
    birthday: '',
    sex: '',
    height: '',
    weight: '',
    incidenceTime: '',
    education: '',
    vals:['','','','','','','',''],
    tipsMsg: ["请输入您的真实姓名", "请选择您的性别", "请输入您的微信号", "请输入您的身高",'请输入您的体重',"请选择您的出生日期","请选择您的发病日期","请选择您的教育程度"],
  },
  onLoad: function (option) {
    var domain = app.globalData.host;
    var unionid = app.globalData.unionid;
    console.log('info.js onload');
    var that = this;
    wx.request({
      url: domain + `/wxs/information/detail?unionid=`+unionid,
      method: 'get',
      success: function (result) {
        console.log(result);
        if (result.data.errcode == 0) {
          var information = result.data.data;
          that.setData({
            id: information.id,
            name: information.name,
            wx: information.wx,
            birthday: information.birthday,
            sex: information.sex,
            height: information.height,
            weight: information.weight,
            incidenceTime: information.incidenceTime,
            education: information.education,
            vals: [information.name, information.wx, information.birthday, information.birthday, information.sex, information.height, information.weight, information.incidenceTime, information.education]
          })
        } else {
          that.prompt(result.errmsg);
        }
      }
    })


  },
  prompt: function (msg) {
    this.setData({
      show: true,
      warnmsg: msg
    })
    var that = this;
    setTimeout(function () {
      that.setData({
        show: false,
        warnmsg: ""
      })
    }, 1500);
  },
  cancel:function(){
    wx.navigateBack({
      delta: 1
    })
  },
  radioChoose: function (e) {
    console.log("radioChoose");
    var index = e.currentTarget.dataset.index;
    var val = e.detail.value;
    var set_vals = 'vals['+index+']'
    this.setData({
      sex: val,
      [set_vals]:val
    });
    console.log(this.data)
  },
  bindKeyInput: function (e) {
    console.log("bindKeyInput");
    var type = e.currentTarget.dataset.type;
    var val = e.detail.value;
    var set_type = '' + type + '';
    var index = e.currentTarget.dataset.index;
    var set_vals = 'vals[' + index + ']'
    this.setData({
      [set_type]: val,
      [set_vals]: val
    })
    console.log(this.data);
    console.log(e);
  },
  bindPickerBirthday: function (e) {
    console.log("bindPickerBirthday");
    console.log(e);
    var index = e.currentTarget.dataset.index;
    var set_vals = 'vals[' + index + ']';
    this.setData({
      birthday: e.detail.value,
      [set_vals]: val
    })
  },
  bindPickerIncidenceTime: function (e) {
    console.log("bindPickerIncidenceTime");
    console.log(e);
    var index = e.currentTarget.dataset.index;
    var set_vals = 'vals[' + index + ']';
    this.setData({
      incidenceTime: e.detail.value,
      [set_vals]: e.detail.value
    })
  },
  bindPickerEducation: function (e) {
    console.log("bindPickerEducation");
    console.log(e);
    var index = e.currentTarget.dataset.index;
    var set_vals = 'vals[' + index + ']';
    this.setData({
      education: e.detail.value,
      [set_vals]: index
    })
  }, 
  formSubmit: function () {
    var vals = this.data.vals;
    console.log()
    for(var i=0;i<vals.length;i++){
      if (vals[i] == '' || vals[i] == null){
        this.prompt(this.data.tipsMsg[i]);
        return;
      }
    }
    var data = JSON.stringify({
      id: this.data.id,
      wx: this.data.wx,
      name: this.data.name,
      sex: this.data.sex,
      birthday: this.data.birthday,
      height: this.data.height,
      weight: this.data.weight,
      incidenceTime: this.data.incidenceTime,
      education: this.data.education
    })
    var that = this;
    var unionid = app.globalData.unionid;
    var domain = app.globalData.host;
    console.log(data)
    wx.request({
      url: domain+`/wxs/information/form?unionid=${unionid}`,
      data:data,
      method: 'POST',
      contentType: 'application/json;charset=UTF-8',
      header: {
        'content-type': 'application/json'
      },
      success: function (result) {        
        if (result.data.errcode == 0) {
          wx.showToast({
            title: '保存成功',
            icon: 'success',
            duration: 2000,
            success:function(){
              wx.navigateBack({
                delta: 1
              })
            }
          })
        } else {
          that.prompt(result.data.errmsg);
        }
      }
    })
  },
  
  
  
})
