.container{
  width: 95%;
  height: 100%;
  margin: 0 auto;
  padding: 0rpx;
  /* overflow-y: scroll; */
  font-size: 36rpx;
}
.avatar{
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  background: #71b6d3;
  position: relative;
}

.avatar::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  transform: scaleY(.5);
  background-color: #9D9D9D;
}

