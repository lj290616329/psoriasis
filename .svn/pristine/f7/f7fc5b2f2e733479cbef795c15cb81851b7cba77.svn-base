<view>
  <view class="content">
    <view class="title">
      <text>用户信息填写</text>
    </view>
    <view class='models'>
    <view class="less">
      <view class="section2">
        <text class='textset' decode='emsp'>姓&emsp;&emsp;名:&ensp;&ensp;</text>
        <input class='input' type='text' value="{{name}}" bindinput='inputName' maxlength='4' confirm-type='done'></input>
      </view>
    </view>
    <view class="less">
      <view class="section2">
        <text class='textset' decode='emsp'>昵&emsp;&emsp;称:&ensp;&ensp;</text>
        <input class='input' type='text' value="{{nickname}}" bindinput='inputNickName' maxlength='15' confirm-type='done'></input>
      </view>
    </view>

    <view class="less">
      <view class="section2">
        <text class='textset' decode='emsp'>微&ensp;信&ensp;号:&ensp;&ensp;</text>
        <input class='input2' type='text' value="{{wx}}" bindinput='inputWX' maxlength='18' confirm-type='done'></input>
      </view>
    </view>

    <!-- <view class="">
      <view class="section2">
        <text class='textset' decode='emsp'>手&ensp;机&ensp;号:&ensp;&ensp;</text>
        <input class='input2' type='text' value="{{phone}}" bindinput='inputPhone' maxlength='11' confirm-type='done'></input>
      </view>
    </view> -->
