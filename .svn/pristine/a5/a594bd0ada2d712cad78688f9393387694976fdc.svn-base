/* pages/from/from.wxss */
page {
  width: 100%;
  height: 100%;
   background-repeat:no-repeat;
   background-size:200% 200%;
   -moz-background-size:200% 200%;
   background-color: #7d96e0;
   
}
.page {
  /* display: flex;
  flex-direction: column;
  align-items: center; */
  /* justify-content: space-between; */
  padding: 60rpx 0;
  box-sizing: border-box;
  /* color: white */
  background-color: #7d96e0;
 
} 
.weui-title {
  text-align: center;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 40rpx;
  font-weight: bold
}
.wrap{
  width: 600rpx;
  margin: 10rpx auto
}
 
.checkbox-con{
  margin-top: 10rpx;
  text-align: center
}
.section {
  margin-top: 20rpx;
}
.checkbox{
  width: 260rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #888888;
  border: 1rpx solid #CECECE;
  border-radius: 5rpx;
  display: inline-block;
  margin: 0 10rpx 0rpx 0;
  position: relative
}

.lbs {
  width: 10rpx;
  height: 35rpx;
  background:#743481;
  display: inline-block;
  margin-right: 10rpx
}
.checked{
  color: #1A92EC;
  background: rgba(49,165,253,0.08);
  border: 1rpx solid #31A5FD;
}
.checkbox checkbox{
  display: none
}
.checked-img{
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 0;
  right: 0
}
.page__hd{
 padding: 10rpx 50rpx 10rpx 50rpx;
 text-align: center;
}
.page__title{
 display: inline-block;
 padding: 20rpx 40rpx;
 font-size: 32rpx;
 color: #AAAAAA;
 border-bottom: 1px solid #CCCCCC;
}

.titles {
  font-size: 34rpx;
  margin-top: 5rpx
}

.picker{
 padding: 10rpx;
 background-color: #FFFFFF;
 color: black;
 width: 90%;
 margin-left: 5%
}
.weui-btn-area {
  width: 600rpx;
  margin: 50rpx auto 0
}
.image1{float:right;}
