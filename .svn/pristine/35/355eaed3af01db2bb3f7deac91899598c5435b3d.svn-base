<view class="info-main">
  <view class="info-container">
    <view class="info-title">个人信息</view>
    <view class="info-content" >
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>姓&emsp;&emsp;名:</text></view>
        <input class='input' placeholder-class='placeholder' auto-focus placeholder="请输入您的真实姓名" type='text' value="{{name}}"></input>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>性&emsp;&emsp;别:</text></view>
        <radio-group class="info-input" bindchange="radioChoose">
          <label>
            <radio class="info-radio" color="#fff" value="1"/>
            <text class="info-text1">男</text>       
          </label>
          <label>
            <radio class="info-radio" color="#fff" value="0"/>
            <text class="info-text1">女</text>           
          </label>
        </radio-group>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>微信号码:</text></view>
        <input class='input' placeholder-class='placeholder' placeholder="请输入您的微信号码" type='text' value="{{name}}"></input>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>身&emsp;&emsp;高:</text></view>
        <input class='input' type='number' placeholder-class='placeholder' placeholder="请输入您的身高(CM)" value="{{name}}"/>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>体&emsp;&emsp;重:</text></view>
        <input class='input' type='number' placeholder-class='placeholder' placeholder="请输入您的体重(KG)" value="{{name}}"/>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>出生日期:</text></view>
        <picker class='input' mode="date" start="1915-01-01" end="new Date()" bindchange="chooseTime" value="{{time1}}">
          <text class='placeholder'>请选择您的出生日期</text>                         
        </picker>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>发病日期:</text></view>
        <picker class='input' mode="date" start="1915-01-01" end="new Date()" bindchange="chooseTime2" value="{{time2}}">          
          <text class='placeholder'>请选择您的发病日期</text>                
        </picker>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>教育程度:</text></view>
        <picker class='input' bindchange="bindPickerlife" value="{{life}}" range="{{arrayeducation}}">
          <text class='placeholder'>请选择您的教育程度</text>
        </picker>
      </view>
      
      <view class='btns'>
        <button class='cancel_btn' bindtap='cancel'>取消</button>
        <button class='primary_btn' bindtap='formSubmit'>保存</button>
      </view>
      
    </view>
  </view>
</view>