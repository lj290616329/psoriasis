/* pages/from/from.wxss */
page{
  background-color: #7d96e0;
  height: 100%;
  display: inline-block;
}
.warn{
  width: 100%;
  position: fixed;
  top:0;
  background-color: red;
  font-size: 24rpx;
  color:#fff; 
  z-index:9999;
  text-align: center;
}
.tag{
  width:30rpx;
  height: 50rpx;
  position: absolute;
  top:40rpx;
  left:10%;
  background-color:#febf07;
  border-radius: 0 0 10rpx 10rpx; 
}
.main{
  width: 100%;
  min-height: 100%;
  background-color: #7d96e0;
}
.container{
  padding: 30rpx 10%;
  min-height:96% ;
  width:94%;
  margin: 20px auto;
  background-color: #fff;
  border-radius: 20px; 
}
.title{
  width:100%;
  color:#7d96e0;
  text-align: center;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 40rpx;
  font-weight: bold;
  border-bottom: 1px #AAAAAA dotted;
  padding-bottom: 30rpx;
}
.item{
  margin: 20rpx 0;
}
.titles{
  color:#000;
  font-size: 32rpx;
  margin-top: 5rpx
}
.radio-group{
  text-align: center;
}
.radio-group label{
  margin: 0 40rpx;
}
radio{ 
  border-radius: 50%;
  width: 40rpx;/* 最好是4的倍数，不然会不在中间 */
  height: 40rpx;
  border: 2rpx solid #7d96e0;/* 设置边框（外圆） */
  font-size: 0;/* 让边框重合 */
  
}

radio .wx-radio-input{
vertical-align: middle;
border-radius: 50%;
width: 40rpx;
height: 40rpx; 
border: none;/* 替换边框（隐藏原有边框） */
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before{ 
  border-radius: 50%;/* 圆角 */
  width: 30rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 30rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 40px;
  text-align: center;
  font-size:0; /* 对勾大小 30rpx */
  color:#7d96e0; /* 对勾颜色 白色 */
  background: #7d96e0;
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
}
.time{
  font-size: 32rpx;
  
  margin-left: 30rpx;
  color: #000000;
	opacity: 0.4;
}
.lbs {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background:#febf07;
  display: inline-block;
  margin-right: 10rpx
}
.text1{
  line-height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  margin: 20rpx 0 0rpx 20rpx;
}
.btncolor {
  width: 400rpx;
  background: #5369fd;
  color: #fff;
  border: 1px solid #5369fd;
  border-radius: 35px;
  margin-top: 70rpx;
}
.chose_time{
  position:relative;
  width: 0;
  height: 0;
  border-width: 16rpx;
  border-style: solid;
  border-color:#7d96e0 transparent transparent transparent;
  float: right;
  top:20rpx;
  right:250rpx;
}
.cant_chose_time{
  position:relative;
  width: 0;
  height: 0;
  border-width: 16rpx;
  border-style: solid;
  border-color:#eee transparent transparent transparent;
  float: right;
  top:20rpx;
  right:250rpx;
}
.cant_lbs{
  background-color:#eee;
}
.cantchoose{
  color:#eee;
}
.setData{
  color:#000;
  opacity: 0.9;
}



.weui-btn-area {
  width: 600rpx;
  margin: 50rpx auto 0
}
