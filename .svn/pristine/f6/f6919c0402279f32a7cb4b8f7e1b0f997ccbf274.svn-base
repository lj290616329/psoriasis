<view class="warn" wx:if='{{show}}'>{{warnmsg}}</view>
<view class="info-main">
  <view class="info-container">
    <view class="info-title">个人信息</view>
    <view class="info-content">
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>姓&emsp;&emsp;名:</text></view>
        <input class='info-input' placeholder-class='info-placeholder' bindblur="bindKeyInput" data-type="name" data-index="0" auto-focus placeholder="请输入您的真实姓名" type='text' value="{{vals[0]}}"></input>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>性&emsp;&emsp;别:</text></view>
        <radio-group class="info-input" bindchange="radioChoose" bindblur="bindKeyInput" data-type="sex" data-index="1">
          <label>
            <radio class="info-radio" color="#fff" value="1" checked='{{vals[1]=="1"?"checked":""}}'/>
            <text class="info-text1">男</text>       
          </label>
          <label>
            <radio class="info-radio" color="#fff" value="2" checked='{{vals[1]=="2"?"checked":""}}'/>
            <text class="info-text1">女</text>           
          </label>
        </radio-group>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>微信号码:</text></view>
        <input class='info-input' bindblur="bindKeyInput" data-type="wx" data-index="2" placeholder-class='info-placeholder' placeholder="请输入您的微信号码" type='text' value="{{vals[2]}}"></input>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>身&emsp;&emsp;高:</text></view>
        <input class='info-input' bindblur="bindKeyInput" data-type="height" data-index="3" type='number' placeholder-class='info-placeholder' placeholder="请输入您的身高(CM)" value="{{vals[3]}}"/>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>体&emsp;&emsp;重:</text></view>
        <input class='info-input' bindblur="bindKeyInput" data-type="weight" data-index="4" type='number' type='number' placeholder-class='info-placeholder' placeholder="请输入您的体重(KG)" value="{{vals[4]}}"/>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>出生日期:</text></view>
        <picker class='info-input' mode="date" start="1915-01-01" end="new Date()" bindchange="bindPickerBirthday" data-index="5">
          <text wx:if='{{vals[5]}}'>{{vals[5]}}</text>
          <text class='info-placeholder' wx:else>请选择您的出生日期</text>                          
        </picker>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>发病日期:</text></view>
        <picker class='info-input' mode="date" start="1915-01-01" end="new Date()" bindchange="bindPickerIncidenceTime" data-index="6">
          <text wx:if='{{vals[6]}}'>{{vals[6]}}</text>           
          <text class='info-placeholder' wx:else>请选择您的发病日期</text>
        </picker>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>教育程度:</text></view>
        <picker class='info-input' bindchange="bindPickerEducation" value="{{vals[7]}}" range="{{arrayeducation}}" data-index="7">
          <text wx:if='{{vals[7]}}'>{{arrayeducation[vals[7]]}}</text>
          <text class='info-placeholder' wx:else>请选择您的教育程度</text>
        </picker>
      </view>      
      <view class='info-btns'>
        <button class='info-cancel_btn' bindtap='cancel'>取消</button>
        <button class='info-primary_btn' bindtap='formSubmit'>保存</button>
      </view>      
    </view>
  </view>
</view>