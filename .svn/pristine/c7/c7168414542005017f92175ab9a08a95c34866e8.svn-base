/**index.wxss**/
page {
 overflow: hidden;
 position: relative
}
.container {
  height: 100vh;
  display: flex;
  overflow: hidden;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-image: url('http://pic.tsing-tec.com/eplus/images/4c4a577d758f4ef6b8b73ce7d242f0c6.png');
  background-repeat:no-repeat;
  background-size:100% 100%;
  -moz-background-size:100% 100%;
} 
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.btn {
  position: absolute;
  top: 78%;  
  color: #fff
  
}
.btnleft{
  position: relative;
  border: 2px 0 2px 2px;
  border-style: solid;
  border-radius: 50%;
}
.btncolor {
  width: 150px;
  background: #5369fd;
  color: #fff;
  border: 1px solid #5369fd;
  border-radius: 35px; 
}
.mask{
 position: absolute;
 left: 0;
 right: 0;
 top: 0;
 bottom: 0;
 display: flex;
 justify-content: center;
 align-items: center;
 background-color: rgba(0,0,0,0.4);
 z-index: 9999;
}
.modal-content{
 display: flex;
 flex-direction: column;
 width: 70%;
 height: 60%;
 background-color: #fff;
 border-radius: 10rpx;
}
.modal-content image {
  width: 200px;
  margin: 0 auto
}
.modal-btn-wrapper{
 display: flex;
 flex-direction: row;
 height: 130rpx;
 line-height: 100rpx;
 border-top: 2rpx solid rgba(7,17,27,0.1);
}
.cancel-btn, .confirm-btn{
 width: 200rpx;
 height: 70rpx;
 border-radius: 40rpx;
 border: 1px solid rgb(124, 144, 236);
 line-height: 70rpx;
 text-align: center;
 font-size: 32rpx;
 margin-left: 40rpx;
 margin-top: 10rpx;
color: rgb(124, 144, 236)
}
.confirm-btn {
  background:  rgb(124, 144, 236);
  color: #ffffff
}
.title1 {
  text-align: center;
  font-size: 36rpx;
  margin-top: 50rpx;
}
.title2 {
  text-align: center;
  font-size: 32rpx;
  margin-top: 20rpx;
  color: #ccc
}