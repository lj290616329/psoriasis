// pages/pages/EvaluationForm1.js
var app = getApp();
var globalData = app.globalData;
Page({
  data: {
    checkvalue1: '',
    time1: '',
    checkvalue2: '',
    time2: '',
    disabled1:false,
    disabled2: false,
    setDate1:false,
    setDate2: false,
    show:false,
    warnmsg:''
  },
  onLoad: function (option) {
    
  },
  radioChoose1: function (e) {
    console.log('picker1发送选择改变，携带值为', e.detail.value)
    app.globalData.checkvalue1 = e.detail.value
    this.setData({
      checkvalue1: e.detail.value
    })
    if (e.detail.value==0){
      app.globalData.time1 = '';
      this.setData({
        time1: '',
        disabled1: true,
        setDate1:false
      })      
    }else{      
      this.setData({
        disabled1: false
      })
    }
  },
  radioChoose2: function (e) {
    console.log('picker发送选择改变，携带值为2', e.detail.value)
    app.globalData.checkvalue2 = e.detail.value
    this.setData({
      checkvalue2: e.detail.value,      
    })
    if (e.detail.value == 0) {
      app.globalData.time2 = '';
      this.setData({
        time2: '',
        disabled2: true,
        setDate2: false
      })      
    }else{
      this.setData({
        disabled2: false,        
      })
    }
  },  
  chooseTime1: function(e) {
    console.log('picker发送选择改变，携带值为3', e.detail.value)
    app.globalData.time1 = e.detail.value
    this.setData({
      time1: e.detail.value,
      setDate1:true
    })
  },
  chooseTime2: function (e) {
    console.log('picker发送选择改变，携带值为4', e.detail.value)
    app.globalData.time2 = e.detail.value
    this.setData({
      time2: e.detail.value,
      setDate2: true
    })
  },
  prompt:function(msg){
    this.setData({
      show: true,
      warnmsg: msg
    })
    var that = this;
    setTimeout(function(){
      that.setData({
        show: false,
        warnmsg: ""
      })
    },1500);
  },
  formSubmit: function () {
    console.log(this.data.checkvalue1);
    console.log(this.data.time1);
    if (this.data.checkvalue1 == '') {
      this.prompt("请选择是否已经由皮肤科医生诊断为银屑病！");
      return;
    } else if (this.data.checkvalue1 == 1 && this.data.time1 == ''){
      this.prompt("请选择诊断银屑病时间！");    
      return;
    }
    if (this.data.checkvalue2 == '') {
      this.prompt('请选择是否已经由皮肤科或风湿免疫科医生诊断为银屑病性关节炎（或关节型银屑病）!');    
      return;
    } else if (this.data.checkvalue2 == 1 && this.data.time2 == ''){
      this.prompt('诊断银屑病性关节炎（或关节型银屑病）的时间！');
      return;
    }
    try {
      wx.setStorageSync('checkvalue1', this.data.checkvalue1)
      wx.setStorageSync('time1', this.data.time1)
      wx.setStorageSync('checkvalue2', this.data.checkvalue2)
      wx.setStorageSync('time2', this.data.time2)
    } catch (e) {
      console.log(e);  
    }    
    wx.navigateTo({
      url: '/pages/pages/evaluation/form2'
    })
    
  },
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})