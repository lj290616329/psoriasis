<view class="warn" wx:if='{{show}}'>{{warnmsg}}</view>
<view class="info-main">
  <view class="info-container">
    <view class="info-title">个人信息</view>
    <view class="info-content">
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>姓&emsp;&emsp;名:</text></view>
        <input class='info-input' placeholder-class='info-placeholder' bindblur="bindKeyInput" data-type="name" data-index="0" auto-focus placeholder="请输入您的真实姓名" type='text' value="{{name}}"></input>
      </view>
      
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>电&emsp;&emsp;话:</text></view>
        <input class='info-input' bindblur="bindKeyInput" data-type="phone" data-index="2" placeholder-class='info-placeholder' placeholder="请输入您的电话号码" type='phone' value="{{phone}}"></input>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>擅&emsp;&emsp;长:</text></view>
        <input class='info-input' bindblur="bindKeyInput" data-type="goodAt" data-index="3" type='text' placeholder-class='info-placeholder' placeholder="请输入您的擅长方向" value="{{goodAt}}"/>
      </view>
      <view class="info-item">
        <view class="info-item_lable"><text  decode='true'>个人简介:</text></view>
        <input class='info-input' bindblur="bindKeyInput" data-type="description" data-index="3" type='text' placeholder-class='info-placeholder' placeholder="请输入您的个人简介" value="{{description}}"/>
      </view>
      <view class="info-item">
        <view class="page-section">
          <view class="page-section-title">详细介绍:</view>
          <view class="textarea-wrp">
            <textarea bindblur="bindTextAreaBlur" auto-height value="{{introduce}}" />
          </view>
        </view>
      </view> 
            
      <view class='info-btns'>
        <button class='info-cancel_btn' bindtap='cancel'>取消</button>
        <button class='info-primary_btn' bindtap='formSubmit'>保存</button>
      </view>      
    </view>
  </view>
</view>