@import "../../style/cells.wxss";
.main{
  width:100%;
  padding: 1rem 0;
}
.item-box{
  background-color:#fff;
  overflow: hidden;
}
.item{
   display: flex;
   padding: 0.5rem 1rem;
   position: relative;
}
.item-head{
   width: 3rem;
   height: 3rem;
   margin-right: 1rem;
}
.item-head image{
   width: 100%;
   height: 100%;
}
.item-content{
   flex:1;
}
.item-username{
   font-size: 1rem;
   font-weight: bold;
   color:#000;
   opacity: 0.8;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
   word-wrap: break-word;
   word-break: break-all;
}
.item-time{
   float: right;
   opacity: 0.8;
   font-weight: 100;
   font-size: 0.625rem;
}
.item-desc{
   color: #aaa;
   font-size: 0.675rem;
   line-height: 1;
   padding-top: 1rem;
   overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 1;
   position: relative;
   padding-right: 2rem;
}
.item-badge{
   position: absolute;
   left: 3.5rem;
   top: 0.2rem;
   font-size: 0.6rem;
   color: #fff;
   background-color: #e75e58;
   border-radius: 50%;
   padding:0.1rem;
   display: inline-block;
   min-width: 0.6rem;
   line-height: 1.2;
   text-align: center;
}
