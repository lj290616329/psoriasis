<wxs src="../../../utils/TimeUtil.wxs" module="tutil"/>
<include src ="../template/error.wxml"/>
<view class="main">
  <view class="navbar">
    <view bindtap="changeTab" data-index="0" class="navbar_item {{tab==0 ? 'navbar_item_active':''}}">测试详细</view>
    <view bindtap="changeTab" data-index="1" class="navbar_item {{tab==1 ? 'navbar_item_active':''}}">医生信息</view>
  </view>
  <view class="content" wx:if='{{tab==0}}'>
    <view class="index-bd">
      <view class="kind-list">
        <view class="kind-list-item">
            <view  class="kind-list-item-hd {{opens[0]?'kind-list-item-hd-show':''}}" bindtap="kindToggle" data-index="0">
              <view class="kind-list-text">基本情况</view>
              <view class="kind-list-img {{opens[0]?'kind-list-img-show':''}}"></view>              
            </view>
            <view class="kind-list-item-bd {{opens[0]?'kind-list-item-bd-show':''}}">
              <view class="navigator-box {{opens[0]?'navigator-box-show':''}}">                
                  <view class="navigator">
                    <view class="navigator-text">身高</view>
                    <view class="navigator-arrow">{{evaluation.height}}</view>
                  </view>
                  <view class="navigator">
                    <view class="navigator-text">体重</view>
                    <view class="navigator-arrow">{{evaluation.weight}}</view>
                  </view>
                  <view class="navigator">
                    <view class="navigator-text">银屑病首次发病日期</view>
                    <view class="navigator-arrow">{{evaluation.incidenceTime}}</view>
                  </view>
                  <view class="navigator">
                    <view class="navigator-text">是否已经由皮肤科医生诊断为银屑病</view>
                    <view class="navigator-arrow">{{evaluation.checkvalue1==1?'是':'否'}}</view>
                  </view>
                  <view class="navigator" wx:if="{{evaluation.time1}}">
                    <view class="navigator-text">诊断银屑病的时间</view>
                    <view class="navigator-arrow">{{tutil.formatDate(evaluation.time1 ,'YY-MM-DD')}}</view>
                  </view>
                  
                  <view class="navigator">
                    <view class="navigator-text">是否已经由皮肤科或者风湿免疫科医生诊断为银屑病关节炎(或关节型银屑病)</view>
                    <view class="navigator-arrow">{{evaluation.checkvalue2==1?'是':'否'}}</view>
                  </view>
                  <view class="navigator"wx:if="{{evaluation.time2}}">
                    <view class="navigator-text">诊断银屑病性关节炎或关节型银屑病的时间</view>
                    <view class="navigator-arrow">{{tutil.formatDate(evaluation.time2 ,'YY-MM-DD')}}</view>
                  </view>
              </view>
            </view>
          </view>
          
        <view class="kind-list-item">
            <view  class="kind-list-item-hd {{opens[1]?'kind-list-item-hd-show':''}}" bindtap="kindToggle" data-index="1">
              <view class="kind-list-text">评估表1</view>
              <view class="kind-list-img {{opens[1]?'kind-list-img-show':''}}"></view>              
            </view>
            <view class="kind-list-item-bd {{opens[1]?'kind-list-item-bd-show':''}}">
              <view class="navigator-box {{opens[1]?'navigator-box-show':''}}">                
                  <view class="navigator">
                    <view class="navigator-text">面积(A)</view>
                    <view class="navigator-arrow">{{evaluation.datet1}}级</view>
                  </view>
                  <view class="navigator">
                    <view class="navigator-text">红斑(E)</view>
                    <view class="navigator-arrow">{{evaluation.datet2}}级</view>
                  </view>                  
                  <view class="navigator">
                    <view class="navigator-text">鳞屑(S)</view>
                    <view class="navigator-arrow">{{evaluation.datet3}}级</view>
                  </view>
                  <view class="navigator">
                    <view class="navigator-text">厚度(T)</view>
                    <view class="navigator-arrow">{{evaluation.datet4}}级</view>
                  </view>
                  <view class="navigator">
                    <view class="navigator-text">近一周对生活影响</view>
                    <view class="navigator-arrow">{{arraylife[evaluation.level]}}</view>
                  </view>
              </view>
            </view>
          </view>
          
        <view class="kind-list-item">
          <view  class="kind-list-item-hd {{opens[2]?'kind-list-item-hd-show':''}}" bindtap="kindToggle" data-index="2">
            <view class="kind-list-text">评估表2</view>
            <view class="kind-list-img {{opens[2]?'kind-list-img-show':''}}"></view>              
          </view>
          <view class="kind-list-item-bd {{opens[2]?'kind-list-item-bd-show':''}}">
            <view class="navigator-box {{opens[2]?'navigator-box-show':''}}">                
                <view class="navigator">
                  <view class="navigator-text">曾经有过一个或多个关节肿胀</view>
                  <view class="navigator-arrow">{{evaluation.if_1==1?'是':'否'}}</view>
                </view>
                <view class="navigator">
                  <view class="navigator-text">有医生告诉过有关节炎</view>
                  <view class="navigator-arrow">{{evaluation.if_2==1?'是':'否'}}</view>
                </view>                  
                <view class="navigator">
                  <view class="navigator-text">指(趾)甲上有凹点</view>
                  <view class="navigator-arrow">{{evaluation.if_3==1?'是':'否'}}</view>
                </view>
                <view class="navigator">
                  <view class="navigator-text">后脚跟疼</view>
                  <view class="navigator-arrow">{{evaluation.if_4==1?'是':'否'}}</view>
                </view>
                <view class="navigator">
                  <view class="navigator-text">有一个手指(足趾)不明原因肿痛</view>
                  <view class="navigator-arrow">{{evaluation.if_5==1?'是':'否'}}</view>
                </view>
                <view class="navigator">
                  <view class="navigator-text">口服阿维A,他扎罗汀等维A酸类药物</view>
                  <view class="navigator-arrow">{{evaluation.if_6==1?'是':'否'}}</view>
                </view>
                <view class="navigator">
                  <view class="navigator-text">患有虹膜炎,睫状体炎或脉络膜炎</view>
                  <view class="navigator-arrow">{{evaluation.if_7==1?'是':'否'}}</view>
                </view>                  
            </view>
          </view>
        </view>
        <!--测评结果-->  
        <view class="kind-list-item">
          <view  class="kind-list-item-hd {{opens[3]?'kind-list-item-hd-show':''}}" bindtap="kindToggle" data-index="3">
            <view class="kind-list-text">测评结果</view>
            <view class="kind-list-img {{opens[3]?'kind-list-img-show':''}}"></view>              
          </view>
          <view class="kind-list-item-bd {{opens[3]?'kind-list-item-bd-show':''}}">
            <view class="navigator-box {{opens[3]?'navigator-box-show':''}}">                
              <view class="navigator">
                <view class="navigator-text">严重程度评分</view>
                <view class="navigator-arrow">{{spasiList[evaluation.result_map.spasi_i]}}</view>
              </view>
              <view class="navigator">
                <view class="navigator-text">银屑病关节炎得分</view>
                <view class="navigator-arrow">{{qolList[evaluation.result_map.qol_i]}}</view>
              </view>
              <view class="navigator">
                <view class="navigator-text">银屑病关节炎风险评估得分</view>
                <view class="navigator-arrow">{{psaList[evaluation.result_map.psa_i]}}</view>
              </view>
              <view class="weui-article__section">
                <view class="weui-article__h3">评估结果</view>
                <view class="weui-article__p">
                    {{evaluation.result_map.spasi_s}}
                </view>
                <view class="weui-article__p">
                    {{evaluation.result_map.qol_s}}
                </view> 
                <view class="weui-article__p">
                    {{evaluation.result_map.pest_s}}
                </view>                 
              </view>
              <view class="weui-article__section">
                <view class="weui-article__h3">防控建议</view>
                <view class="weui-article__p">
                    {{evaluation.result_map.suggest}}
                </view>
                <view class="weui-article__p">
                    {{evaluation.result_map.pest_suggest}}
                </view>                
              </view>
              <view class="weui-article__section">
                <view class="weui-article__h3">风险提示</view>
                <view class="weui-article__p">
                    {{evaluation.result_map.psa_s}}
                </view>
                <view class="weui-article__section" wx:if="{{evaluation.result_map.risks.length>0}}">
                  <view class="weui-article__h3">风险点</view>
                  <view class="weui-article__p" wx:for="{{evaluation.result_map.risks}}">{{item}}</view>              
                </view>              
              </view>
            </view>
          </view>
        </view>
        <!--Caspar表-->
        <view class="kind-list-item">
          <view  class="kind-list-item-hd {{opens[4]?'kind-list-item-hd-show':''}}" bindtap="kindToggle" data-index="4">
            <view class="kind-list-text">Caspar表</view>
            <view class="kind-list-img {{opens[4]?'kind-list-img-show':''}}"></view>              
          </view>
          <view class="kind-list-item-bd {{opens[4]?'kind-list-item-bd-show':''}}">
            <view class="navigator-box {{opens[4]?'navigator-box-show':''}}">                
              <view class='history-table-wrap'>
                <view class="table">
                  <view class="tr">
                      <view class="th th0">类别</view>
                      <view class="th th1">评分内容</view>
                      <view class="th th2">判断</view>
                      <view class="th th3">分值</view>
                  </view>
                  <view class="tr" >
                      <view class="td th0">主要标准</view>
                      <view class="td th1 align_left">炎性关节病(关节、脊柱、肌腱)</view>
                      <view class="td th2">{{evaluation.num1===null?'未处理':evaluation.num1===1?'是':'否'}}</view>
                      <view class="td th3">{{evaluation.num1===null?'':evaluation.num1}}</view>
                  </view>
                  <view class="tr" >
                      <view class="td th0 no_boder"></view>
                      <view class="td th1 align_left">1. 现发银屑病、银屑病既往史或家族史的证据（现发银屑病赋值2分，其他表现则赋值1分）*。</view>
                      <view class="td th2">{{evaluation.num2===null?'未处理':evaluation.num2===1?'是':'否'}}</view>
                      <view class="td th3">{{evaluation.num2===null?'':evaluation.num2}}</view>
                  </view>
                  <view class="tr" >
                    <view class="td th0 no_boder"></view>
                    <view class="td th1 align_left">2. 就诊时可见典型的银屑病指甲改变，包括甲剥离、顶针样改变、过度角化等表现。</view>
                    <view class="td th2">{{evaluation.num3===null?'未处理':evaluation.num3===1?'是':'否'}}</view>
                      <view class="td th3">{{evaluation.num3===null?'':evaluation.num3}}</view>
                  </view>
                  <view class="tr" >
                    <view class="td th0 no_boder">次要标准</view>
                    <view class="td th1 align_left">3. 类风湿因子检查结果为阴性。（类风湿因子可用除凝胶法外的其他方法检测，但最好采用酶联免疫吸附试验或比浊法，按当地实验室检查的参考值范围）</view>
                    <view class="td th2">{{evaluation.num4===null?'未处理':evaluation.num4===1?'是':'否'}}</view>
                      <view class="td th3">{{evaluation.num4===null?'':evaluation.num4}}</view>
                  </view>
                  <view class="tr" >
                  <view class="td th0 no_boder"></view>
                      <view class="td th1 align_left">4. 具有整个指趾肿胀的指趾炎表现，或由风湿病医师记录的指趾炎病史。</view>
                      <view class="td th2">{{evaluation.num5===null?'未处理':evaluation.num5===1?'是':'否'}}</view>
                      <view class="td th3">{{evaluation.num5===null?'':evaluation.num5}}</view>
                  </view>
                  <view class="tr" >
                  <view class="td th0"></view>
                      <view class="td th1 align_left">5. 影像学证据显示关节周围新骨形成，表现为手足平片可见关节周围异常骨化(而非骨赘形成)。 </view>
                      <view class="td th2">{{evaluation.num6===null?'未处理':evaluation.num6===1?'是':'否'}}</view>
                      <view class="td th3">{{evaluation.num6===null?'':evaluation.num6}}</view>
                  </view>
                  <view class="tr" >
                    <view class="td th0">诊断标准</view>
                      <view class="td th1 align_left">主要标准符合伴有次要标准3分或3分以上即符合CASPAR诊断标准。目前诊断符合情况为(得分为次要标准之和):</view>
                      <view class="td th2">{{evaluation.ifEnd?(evaluation.sum>=3&&evaluation.num1==1)?'符合':'不符合':'未完成'}}</view>
                      <view class="td th3">{{evaluation.sum===null?'未完成':evaluation.sum}}</view>
                  </view>
                </view>  
              </view>  
            </view>
          </view>
        </view>          
      </view>
    </view>  
  </view>
  <view class="content" wx:else>
    <view class="index-bd">
      <view class="kind-list"  wx:if="{{doctor}}">
        <view class="weui-cells" style="border-radius: 20rpx 20rpx 0 0;">
          <view class="weui-cell">
            <view class="weui-cell__bd">姓名</view>
            <view class="weui-cell__ft">{{doctor.name?doctor.name:'医生很懒,还未填写'}}</view>
          </view>
          <view class="weui-cell">
            <view class="weui-cell__bd">电话</view>
            <view class="weui-cell__ft">{{doctor.phone?doctor.phone:'医生很懒,还未填写'}}</view>
          </view>
          <view class="weui-cell">
            <view class="weui-cell__bd">擅长</view>
            <view class="weui-cell__ft">{{doctor.goodAt?doctor.goodAt:'医生很懒,还未填写'}}</view>
          </view>
          <view class="weui-cell">
            <view class="weui-cell__bd">简介</view>
            <view class="weui-cell__ft">{{doctor.description?doctor.description:'医生很懒,还未填写'}}</view>
          </view>           
        </view>
        <view class="weui-cells__title">详细介绍</view>
        <view class="weui-cells" style="margin-top:0;border-radius:0 0 20rpx 20rpx;">          
            <view class="textarea-wrp"  style="border-radius:0 0 20rpx 20rpx;">
              <view class="weui-textarea">{{doctor.introduce?doctor.introduce:'医生很懒,还未填写'}}</view>                    
            </view>          
        </view>
      </view>
      <view class="page msg_success js_show" wx:else>
        <view class="weui-msg">
          <view class="weui-msg__icon-area">
            <image src="/pages/image/no-data.png" style="width:300rpx;height:300rpx;margin:0 auto;"></image>
          </view>
          <view class="weui-msg__text-area">
            <view class="weui-msg__desc">您的病历暂未绑定医生</view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="footer" bindtap="share_result"  wx:if="{{tab==0}}">分享结果给医生</view>
</view>

<view class='mask' wx:if='{{show}}'>
  <view class='modal-content'>
    <view class='title1' style="margin-top:25rpx;">请将此二维码出示给医生</view>
    <view class="code-img"  style="width:80%;margin:0 auto;height:{{codeHeight}}">
      <image style="width:80%;margin:10% auto;height:80%;" src="{{code}}"></image>
    </view>
    <view class='modal-btn-wrapper'style="margin-top:0;">
        <button class='cancel-btn'  bindtap='cancle'>取消</button>
        <button class='confirm-btn' bindtap="home">主页</button>
    </view>
  </view>
</view>
