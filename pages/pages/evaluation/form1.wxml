<!--pages/pages/EvaluationForm4.wxml-->
<include src ="../template/error.wxml"/>
<view class="main">
  <view class="tag"></view>
  <view class="container">
    <view class="title">
      <text>基本情况</text>
    </view>
    <view class='content'>
      <view class="info-item">
        <view class="info-item_lable">
          <text class='lbs'></text>
          <text class="titles">身高(CM):</text>
        </view>
        <input class='time setData' placeholder-class='info-placeholder' bindblur="bindKeyInput" data-type="height" placeholder="请输入您的身高" type='text' value="{{height}}"></input>
      </view>
      
      <view class="info-item">
        <view class="info-item_lable">
          <text class='lbs'></text>
          <text class="titles">体重(KG):</text>
        </view>
        <input class='time setData' bindblur="bindKeyInput" data-type="weight" data-index="2" placeholder-class='info-placeholder' placeholder="请输入您的体重" type='number' value="{{weight}}"></input>
      </view>
      <view class="item">
        <text class='lbs'></text>
        <text class='titles'>银屑病首次发病日期</text>
        <picker class='textset2' mode="date" start="1915-01-01" end="new Date()" bindchange="chooseIncidenceTime" value="{{incidenceTime}}">
          <view class='time'>
            <view wx:if="{{incidenceTime}}">{{incidenceTime}}<view class='chose_time'></view></view>
            <view wx:else>首次发病日期<view class='chose_time'></view></view>                
          </view>
        </picker>

      </view>

      <view class="item">
        <text class='lbs'></text>
        <text class='titles'>是否已经由皮肤科医生诊断为银屑病?</text>
        <radio-group class="radio-group" bindchange="radioChoose1">
          <label>
            <radio class="radio" color="#fff" checked='{{checkvalue1=="1"?"checked":""}}' value="1"/>
            
            <text class="text1">是</text>       
          </label>
          <label>
            <radio class="radio" color="#fff" checked='{{checkvalue1=="0"?"checked":""}}' value="0"/>
            <text class="text1"> 否</text>           
          </label>
        </radio-group>
      </view>
      <view class="item">
        <text class='lbs {{disabled1? "cant_lbs":""}}'></text>
        <text class='titles {{disabled1? "cantchoose":""}}'>诊断银屑病的时间</text>
        <picker class='textset2' disabled="{{disabled1}}" mode="date" start="1915-01-01" end="new Date()" bindchange="chooseTime1" value="{{time1}}">
          <view class='time {{setDate1? "setData":""}}'>
            <view wx:if="{{time1}}">{{time1}}<view class='{{disabled1? "cant_chose_time":"chose_time"}}'></view></view>
            <view class='{{disabled1? "cantchoose":""}}' wx:else>请选择诊断时间<view class='{{disabled1? "cant_chose_time":"chose_time"}}'></view></view>                
          </view>
        </picker>

      </view>
      <view class="item">
        <text class='lbs'></text>
        <text class='titles'>是否已经由皮肤科或风湿免疫科医生诊断为银屑病性关节炎（或关节型银屑病）?</text>
        <radio-group class="radio-group" bindchange="radioChoose2">
          <label>
            <radio class="radio" color="#fff" value="1" checked='{{checkvalue2=="1"?"checked":""}}'/>
            <text class="text1">是</text>       
          </label>
          <label>
            <radio class="radio" color="#fff" value="0" checked='{{checkvalue2=="0"?"checked":""}}'/>
            <text class="text1"> 否</text>           
          </label>
        </radio-group>
      </view>
      <view class="item">
        <text class='lbs {{disabled2? "cant_lbs":""}}'></text>
        <text class='titles {{disabled2? "cantchoose":""}}'>诊断银屑病性关节炎（或关节型银屑病）的时间</text>
        <picker class='textset2' disabled="{{disabled2}}" mode="date" start="1915-01-01" end="new Date()" bindchange="chooseTime2" value="{{time2}}" >
          <view class='time {{setDate2? "setData":""}}'>
            <view wx:if="{{time2}}">{{time2}}<view class='{{disabled2? "cant_chose_time":"chose_time"}}'></view></view>
            <view class='{{disabled2? "cantchoose":""}}' wx:else>请选择诊断时间<view class='{{disabled2? "cant_chose_time":"chose_time"}}'></view></view>                
          </view>
        </picker>
      </view>
      <view class="item">
        <view class='btn'>
          <button class='btncolor' bindtap='formSubmit'> 下一步 </button>
        </view>
      </view>
    </view>
  </view>
</view>