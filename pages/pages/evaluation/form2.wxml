<include src ="../template/error.wxml"/>
<view class="main">
  <view class="tag"></view>
  <view class="container">
    <view class="title">
      <text>评估表1</text>
    </view>
    <view class='content'>     
      <view class="item">
        <text class='lbs'></text>
        <view class='titles'>面积(A):<text class='result'>{{result[0]===''?'':result[0]+'级'}}</text>         
          <view bindtap='showpics' data-index='0' class='btn'>请选择</view>
        </view>        
      </view>
      <view class="item">
        <text class='lbs'></text>
        <view class='titles'>红斑(E):<text class='result'>{{result[1]===''?'':result[1]+'级'}}</text>         
          <view bindtap='showpics' data-index='1' class='btn'>请选择</view>
        </view>
      </view>

      <view class="item">
        <text class='lbs'></text>
        <view class='titles'>鳞屑(S):<text class='result'>{{result[2]===''?'':result[2]+'级'}}</text>         
          <view bindtap='showpics' data-index='2' class='btn'>请选择</view>
        </view>
      </view>

      <view class="item">
        <text class='lbs'></text>
        <view class='titles'>厚度(T):<text class='result'>{{result[3]===''?'':result[3]+'级'}}</text>         
          <view bindtap='showpics' data-index='3' class='btn'>请选择</view>
        </view>
      </view>

      <view class='separate'></view>
      
      <view class="item">
        <text class='lbs'></text>
        <view class='titles'>生活质量评分:<text class='result'></text>
          <picker style="float:right;" bindchange="bindPickerlife" value="{{life}}" range="{{arraylife}}">
            <view size='mini' bindtap='bindpic2' class='btn'>请选择</view>
          </picker>
        </view>
      </view>

      <view class='item picheight' wx:if="{{level}}">
        <image class='image1 {{level==""?"nopic":""}}' mode='widthFix' src="{{lifePic}}">
      </image>

      </view>
        
      <view class="item">
        <button class='btncolor' bindtap='formSubmit'> 下一步 </button>
      </view>       
    </view>
    <!-- 显示图片 -->
    <scroll-view scroll-y="true" class="modal-mask" wx:if="{{pics}}">
      <view class="pics_box">
        <view class="prompt_title">
          <text>点击选择最符合您病情的图例</text>
        </view>
        <block wx:for="{{imageBox}}" wx:for-item="index" wx:for-item="item">
          <view class='pic' bindtap='choosePic' data-index="{{index}}">
            <image mode='widthFix' src="/pages/image/{{item[0]}}"></image>
            <text class="grade">{{item[1]}}</text>
          </view>        
        </block>
      </view>
    </scroll-view>
  </view>
</view>
  
  