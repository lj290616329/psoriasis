<view style="width:100%;position:fixed;top:0;background-color:#e75e58;font-size:24rpx;color:#fff;z-index:9999;text-align:center;" wx:if='{{prompt}}'>{{promptMsg}}</view>
<view style="z-index:9998;position: fixed;top:0;bottom:0;left:0;right:0;height:100%;background-color: #f5f5f5;" wx:if="{{error}}">
  <view class="page msg_success js_show">
    <view style="padding-top: 140px;text-align: center;">
      <view style="margin-bottom: 30px;">
        <image src="/pages/image/error.png" style="width:300rpx;height:300rpx;margin:0 auto;display: inline-block;"></image>
      </view>
      <view style="margin-bottom: 25px;padding: 0 20px;">
        <view style="font-size:28rpx;color:#999;word-wrap: break-word;word-break: break-all;">{{errmsg}}</view>
      </view>
      <view style="margin:30rpx auto;">
        <button bindtap="back" style="background-color: #f5f5f5;border-radius: 45rpx;width: 60%;color:#999;border: 1px solid #999;">返回</button>
      </view>
    </view>
  </view>
</view>