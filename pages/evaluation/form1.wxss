page{
  background-color: #7d96e0;
}
.main{
  width: 100%;
  min-height: 100%;
  background-color: #7d96e0;
}
.container{
  box-sizing: border-box;
  padding: 1rem 2rem;
  width: 94%;
  margin: 0 auto 1.125rem;
  background-color: #fff;
  border-radius: 40rpx;
  position: relative;
  top: 1.125rem;
}
.title{
  color: #7d96e0;
  text-align: center;
  font-size: 1.125rem;
  font-weight: bold;
  border-bottom: 1px #aaa dotted;
  padding-bottom: 1rem;
}
.item{
  margin: 0.625rem 0;
}
.titles{
  color: #000;
  font-size: 1rem;
  margin-top: 0.06rem;
}
.radio-group{
  display: flex;
  flex:1;
  margin-top:0.625rem;
}
.radio-group label{
  display: flex;
  flex:1;
  margin:0 2rem;
}

.time{
  font-size: 1rem;
  margin-left: 1rem;
  color: #000000;
  opacity: 0.4;
  margin-top: 0.625rem;
  position: relative;
}
.pick::after{
  position:absolute;
  content: "";
  width: 0;
  height: 0;
  border-width: 0.5rem;
  border-style: solid;
  border-color:#7d96e0 transparent transparent transparent;
  float: left;
  top: 0.315rem;
  left: 10rem;
}
.lbs {
  width: 0.625rem;
  height: 0.625rem;
  border-radius: 50%;
  background: #febf07;
  display: inline-block;
  margin-right: 0.375rem;
}
.text1{
  flex: 1;
  display: flex;
  margin-left: 1rem;
}
.btncolor {
  width: 400rpx;
  background: #5369fd;
  color: #fff;
  border: 1px solid #5369fd;
  border-radius: 35px;
  margin-top: 70rpx;
}

.cantchoose{
  opacity: 0.1;
}
.setData{
  opacity: 0.9;
}

.weui-btn-area {
  width: 600rpx;
  margin: 50rpx auto 0
}
