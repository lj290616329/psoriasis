page{
  background-color: #7d96e0;
}
.main{
  width: 100%;
  min-height: 100%;
  background-color: #7d96e0;
}
.container{
  box-sizing: border-box;
  padding: 1rem 2rem;
  width: 94%;
  margin: 0 auto 1.125rem;
  background-color: #fff;
  border-radius: 40rpx;
  position: relative;
  top: 1.125rem;
}
.title{
  color: #7d96e0;
  text-align: center;
  font-size: 1.125rem;
  font-weight: bold;
  border-bottom: 1px #aaa dotted;
  padding-bottom: 1rem;
}

.item{
  margin: 1.5rem 0;
  display: flex;
  align-items: center;
}

.item_last{
  margin: -60rpx 0 60rpx;
}
.titles{
  color: #000;
  font-size: 1rem;
  margin-top: 0.06rem;
}
.lbs {
  width: 0.625rem;
  height: 0.625rem;
  border-radius: 50%;
  background: #febf07;
  display: inline-block;
  margin-right: 0.375rem;
}

.choose {
  font-size: 1rem; 
  line-height: 2rem;
  letter-spacing: 0px;
  color: #7d96f4;
  width: 6rem;  
  border-radius: 1rem;
  border: solid 1px #7d96f4;
  text-align: center;  
}
.result{
	letter-spacing: 0px;
	color: #5369fd;
	opacity: 0.9;
  margin-left: 0.625rem;
  flex: 1;
}
.separate{
  background: #E0E3DA;
  width: 100%;
  opacity: 0.8;
  height: 0.05rem;
}

.btncolor {
  width: 12rem;
  border-radius: 2rem;
  height: auto;
  background: #5369fd;
  color: #fff;
}
.hidden{
  display: none;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #7d96f4;
  z-index: 9000;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

.pics_box{
  min-height:96% ;
  width:100%;
  margin: 0.625rem auto;
  border-radius: 0.625rem;
  padding-bottom: 2rem; 
}
.pic{
  width: 45.5%;  
  display: inline-block;
  background-color: #fff;
  margin: 1rem 0% 0 3%;  
  border-radius: 1rem;
}

.pic image{
  width: 100%;
  display: inline-block;
  margin: 1rem 0 0;
}
.grade{
  height: 1.4rem;
  text-align: center;
  background-color: #febf07;
  border-radius: 0 0 0.625rem 0.625rem;
  width: 100%;
  display: block;
	font-size: 0.5rem;
	font-weight:bold;
	letter-spacing: 0px;
	color: #000;
  opacity: 0.8;
  display: flex;            
  flex-direction: row;  /* 子元素横向排列 */
  justify-content: center; /* 相对父元素水平居中 */
  align-items: center;
}










.prompt_title{
  height: 38px;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 38px;
  letter-spacing: 0px;
  color: #ffffff;
  width: 100%;
  text-align: center;
}









