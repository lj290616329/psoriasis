/*病历列表页以及医生信息或者病人信息*/
.cells{
  background-color: #fff;
  font-size: 1.125rem;
  margin-bottom: 1rem;
  border-radius: 1rem;
}
.no-radius{
  border-radius: 0;
}
.cell{
  display: flex;
  align-items: center;
  padding: 0 1rem;
  min-height: 3.2rem;
  border-bottom: 0.06rem solid #eee;
  height: auto;
}
.cell_head{           
  background-color: #5369fd;
  color:#fff;
  font-weight: bold;
  border-radius: 1rem 1rem 0 0;
}
.cell_lable{
  flex:1;
  color: #010101;
  opacity: 0.8;
}
.cell_val{
  text-align: right;
  color: #999;
}
.cell_more{
  text-align: center;
  flex-direction: column;
  justify-content: space-around;
}
.white{
  color:#fff;
  opacity: 1;
}
.orange{
  color: #febf07;
}
.blue{
  color: #5369fd;
}
.cell-title{
  padding: 1rem;
  color: #010101;
  opacity: 0.8;
}
.cell_content{
  color: #999;
  padding: 0 1rem 1rem;
}