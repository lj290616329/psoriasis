/* 表格代码   */
.table{  
  border-right:0;
  border-bottom: 0;
}
.tr{
  width:100%;
  display: flex;
}
.th,.td{
  padding: 10px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width: 100%;
  line-height: 100%;
  flex-direction: column;
  justify-content: center;
  display: flex;
}
.th:last-child{
  border-right: none;
}
.td:last-child{
  border-right: none;
}
.w1{
  flex:1;
}
.w3{
  flex:3;
}
.th{
  font-weight: 800;
  background-color: #ffffff;
	opacity: 0.9;
  font-size: 32rpx;
  color: #000;
}
.td{
  font-size: 30rpx;
  color: #010101;
	opacity: 0.7;
  line-height: 30rpx;
}
.no_boder{
  border-bottom: none;
}
.align_left{
