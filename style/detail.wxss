/*head-tab*/
.navbar{
  position: fixed;
  width:100%;
  top: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  z-index: 500;
  background-color: #fff;
  margin-bottom:0.625rem;
}
.navbar_item{
  flex: 1;
  text-align: center;
  padding:0;
  height: 3rem;
  line-height: 3rem;
  font-size: 1rem;
  font-weight: 500;
}
.navbar_item_active{
  background-color: #5369fd;
  color:#fff;
}

/*折叠区域*/
.navigator-box {
  opacity: 0;
  position: relative;
  background-color: #FFFFFF;
  line-height: 1.41176471;
  transform: translateY(-50%);
  transition: .3s;
}
.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}
.navigator {
  padding: 1rem;
  position: relative;
  display: flex;
  align-items: center;
  font-size: 1rem;
  color: #010101;
  opacity: .8;
}
.navigator:before {
  content: " ";
  position: absolute;
  left: 1rem;
  top: 0;
  right: 1rem;
  height: 1px;
  border-top: 1rpx solid #D8D8D8;
  color: #D8D8D8;
}
.navigator:first-child:before {
  display: none;
}
.navigator-text {
  flex: 1;
}
.navigator-arrow {
  opacity: 1;
  position: relative;
  color: #febf07;
}
.kind-list-item {
  margin: 1rem 0;
  background-color: #FFFFFF;
  overflow: hidden;
}

.kind-list-item:first-child {
  margin-top: 0;
}
.kind-list-text{
  flex: 1;
}
.kind-list-img { 
  width: 0;
  height: 0;
  border-width: 0.5rem;
  border-style: solid;
  border-color:#5369fd transparent transparent transparent;  
}
.kind-list-img-show{
  border-color: transparent transparent  #fff transparent;  
}
.kind-list-item-hd {
  padding: 1rem;
  display: flex;
  align-items: center;
  transition: opacity .3s;
  font-size: 1rem;
}
.kind-list-item-hd-show {
  color: #fff;
  background-color: #5369fd;
}
.kind-list-item-bd {
  height: 0;
  overflow: hidden;
}
.kind-list-item-bd-show {
  height: auto;
  padding-bottom: 1rem;
}
.weui-article__section{
  padding: 0.625rem 1rem;
  border-top: 0.05rem solid #D8D8D8;
  margin-bottom: 0;
}

.weui-article__h3{
  font-weight: bold;
  position: relative;
  padding-left: 1rem;
}
.weui-article__h3::before{
  position: absolute;
  left: 0;
  content: '';
  background-color: #febf07;
  width: 0.5rem;
  border-radius: 50%;
  height: 0.5rem;
  top: 0.5rem;
}
.weui-article__h4{
  color: #febf07;
}
.weui-article__p {
  font-size: 1rem;
  color: #000;
  opacity: 0.8;
  margin: 0;
  padding-left: 1rem;
}
