.mask{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.4);
  z-index: 9999;
}
.modal-content{
  display: flex;
  flex-direction: column;
  width: 84%;  
  background-color: #fff;
  border-radius: 30rpx;
  position: relative;
}
.modal-logo{
  position: absolute;
  top: -2.5rem;
  width: 100%;
}
.logo{  
  border-radius: 50%;
  width: 5rem;
  height: 5rem;
  margin: 0 auto;
  display: block;
}
.modal-title{
  margin-top: 3rem;
  margin-bottom: 0.5rem;
  font-weight: bolder;
  text-align: center;  
  font-size: 1.25rem;	
  font-stretch: normal;
  line-height: 2rem;	
  color: #000000;
  opacity: 0.9;
}
.modal-des{
  text-align: center;
  font-size: 32rpx;
  margin-top: 20rpx;
  color: #ccc
}
.modal-btns{
  margin: 3rem 1rem 1.5rem;
  text-align: center;
  height: 3rem;
  display: flex;
  justify-content: center;
}
.modal-btn{
  flex: 1;
  border-radius: 2rem;
  margin: 0 0.315rem;
  height: 3rem;
  max-width: 12rem;
  padding: 0;
}